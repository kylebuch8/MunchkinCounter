<?xml version='1.0' encoding='utf-8'?>
<widget id="com.kissandmakeapps.munchkincounter" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Munchkin Counter</name>
    <description>
        Munchkin Counter for the Munchkin card game.
    </description>
    <author email="kyle@kissandmakeapp.com" href="http://kissandmakeapps.com">
        Kyle Buchanan
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" version="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
